/*
Rectangle, 4 components
typedef struct Rectangle {
    float x;                // Rectangle top-left corner position x
    float y;                // Rectangle top-left corner position y
    float width;            // Rectangle width
    float height;           // Rectangle height
} Rectangle;
*/

typedef struct RayText {
  char* str;     // def NULL
  Font  font;    // def (Font){FONT_DEFAULT}
  float size;    // def 10
  float spacing; // def 1
  Color tint;    // def WHITE
} RayText;
// DrawTextEx(Font font, const char *text, Vector2 position, float fontSize, float spacing, Color tint);


typedef struct Rayline {
  Vector2 start;
  Vector2 end;
  float   thick;
  Color   color;
} Rayline;
// DrawLineEx(Vector2 startPos, Vector2 endPos, float thick, Color color);


typedef struct RayRec {
  Rectangle rectangle;
  float     angle;
  Color     color;
} RayRec;
// DrawRectanglePro(Rectangle rec, Vector2 origin, float rotation, Color color);


typedef struct RayTriangle {
  Vector2   v1;
  Vector2   v2;
  Vector2   v3;
  Color     color;
} RayTriangle;
// DrawTriangle(Vector2 v1, Vector2 v2, Vector2 v3, Color color);

typedef struct RayTriangleLines {
  Vector2   v1;
  Vector2   v2;
  Vector2   v3;
  Color     color;
} RayTriangleLines;
// DrawTriangleLines(Vector2 v1, Vector2 v2, Vector2 v3, Color color);

typedef struct RayTexture {
  Vector2   position;
  float     rotation;
  float     scale;
  Color     color;
} RayTexture;
// DrawTextureEx(Texture2D texture, Vector2 position, float rotation, float scale, Color tint);
